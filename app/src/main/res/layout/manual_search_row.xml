<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:weightSum="2">

    <TextView
        android:id="@+id/row_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="12dp"
        android:layout_weight="0.7"
        android:ellipsize="end"
        android:gravity="start|center"
        android:minHeight="35dp"
        android:singleLine="true"
        android:text="Orange"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_text_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"

        android:layout_weight="0.7"
        android:ellipsize="end"
        android:gravity="start|center"
        android:minHeight="35dp"
        android:layout_toEndOf="@id/row_text_label"
        android:singleLine="true"
        android:text="(100 grams)"
        android:textSize="12sp"
        />


    <LinearLayout
        android:id="@+id/layoutdetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/row_text_label"
        android:layout_marginTop="8dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:weightSum="2">





        <LinearLayout
            android:id="@+id/layoutdetailsss"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/row_text_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FF726E"
                android:textStyle="bold"
                android:text="000" />

            <View
                android:layout_height="fill_parent"
                android:layout_width="1dp"
                android:background="#000"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/row_text_info1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100" />

            <View
                android:layout_height="fill_parent"
                android:layout_width="1dp"
                android:background="#000"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/row_text_info2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="200" />

            <View
                android:layout_height="fill_parent"
                android:layout_width="1dp"
                android:background="#000"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/row_text_info3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="300" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>