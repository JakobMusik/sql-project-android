<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/ucla_blue"

    >


    <TextView
        android:id="@+id/chooseAmountHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/accent"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/productNameValueTextVie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/veggies"

                 />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"

            android:weightSum="3"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Nutrition Values Per 100 grams"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/productNameValueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="Butter Chicken"
                android:layout_weight="2"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutdetails"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/row_text_label"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/layoutdetailsname"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/calValueEditTextn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Calories"
                    android:textStyle="bold"/>

                <View
                    android:layout_height="fill_parent"
                    android:layout_width="0.5dp"
                    android:background="#fff"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/proteinValueEditTextn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Proteins"
                    android:textStyle="bold"/>

                <View
                    android:layout_height="fill_parent"
                    android:layout_width="0.5dp"
                    android:background="#fff"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/carbohydratesValueEditTextn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Carbs" />

                <View
                    android:layout_height="fill_parent"
                    android:layout_width="0.5dp"
                    android:background="#fff"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/fatValueEditTextn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Fat" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutdetailsss"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:id="@+id/caloriesValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="500"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_height="fill_parent"
                    android:layout_width="0.5dp"
                    android:background="#fff"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/proteinValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="500"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_height="fill_parent"
                    android:layout_width="0.5dp"
                    android:background="#fff"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/carbohydratesValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="500"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_height="fill_parent"
                    android:layout_width="0.5dp"
                    android:background="#fff"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/fatValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="500"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:hintTextColor="@color/accent"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/amountValueEditText"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:background="#343750"
                    android:digits="0123456789"
                    android:hint="how many grams did you eat? (grams)"
                    android:inputType="numberDecimal|number"
                    android:singleLine="true"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>







    </LinearLayout>




    <LinearLayout
        android:id="@+id/layoutbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:orientation="horizontal">





        <com.google.android.material.button.MaterialButton
            android:id="@+id/addButton"
            style="@style/SAIMaterialButton"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:singleLine="false"
            android:text="add to diet" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            style="@style/SAIMaterialButton"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="false"
            android:text="cancel" />
    </LinearLayout>
</RelativeLayout>