<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/ucla_blue</item>
        <item name="colorPrimaryDark">@color/ucla_blue</item>
        <item name="colorAccent">@color/accent</item>

        <item name="titleTextColor">@color/accent</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:fontFamily">@font/nanumpenscriptregular</item>

    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/accent</item>

        <item name="android:background">@color/ucla_blue</item>


    </style>


    <style name="SAIMaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="colorOnPrimary">?attr/colorPrimaryDark</item>
        <item name="android:theme">@style/SAIMaterialButton</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconPadding">3dp</item>
        <item name="iconSize">22dp</item>
        <item name="iconGravity">textStart</item>
    </style>



    <style name="SAICoolbarImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">12dp</item>


        <item name="android:tint">?attr/colorAccent</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>


</resources>